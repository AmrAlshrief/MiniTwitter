# Example environment variables for MiniTwitter API
# Copy this file to `.env` and fill in actual values for local development

# SQL Server connection string (used by MiniTwitter.Data and API)
CONNECTIONSTRINGS__DEFAULTCONNECTION=Server=sqlserver;Database=MiniTwitterDb;User=sa;Password=YourStrong!Passw0rd;

# JWT secret key
JWT__KEY=your_jwt_secret_key_here

# Cloudinary credentials (if used)
CLOUDINARYSETTINGS__CLOUDNAME=your_cloud_name
CLOUDINARYSETTINGS__APIKEY=your_api_key
CLOUDINARYSETTINGS__APISECRET=your_api_secret

# ASP.NET Core environment
ASPNETCORE_ENVIRONMENT=Development



